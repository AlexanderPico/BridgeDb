<?xml version="1.0"?>
<project name="BridgeDb-WS" default="dist" basedir=".">

  <!-- always be java 1.5 compatible -->
  <property name="ant.build.javac.target" value="1.5"/>
  <property name="ant.build.javac.source" value="1.5"/>
	
  <property name="dist.dir" value="../dist"/>
  <property name="jar.name" value="${dist.dir}/bridgedb-webservice.jar"/>
  
  <target name="prepare">
	<mkdir dir="build"/>
  </target>

  <target name="build" depends="prepare">
	<javac srcdir="src"
		   includes="**"
		   debug="true"
		   destdir="build">
		<classpath>
			<pathelement location="../dist/bridgedb.jar"/>
			<pathelement location="../dist/bridgedb-bio.jar"/>
			<pathelement location="lib/restlet-2.0m3/org.restlet.jar"/>
		</classpath>
	</javac>
  </target>
  
  <target name="jar" depends="build">
	<mkdir dir="${dist.dir}"/>
	<jar jarfile="${jar.name}">
	  <manifest>
	  	<attribute name="Main-Class" value="org.bridgedb.rest.Server"/>
		<attribute name="Class-Path" value="derby.jar bridgedb.jar bridgedb-bio.jar org.restlet.jar"/>
	  </manifest>
	  <fileset dir="build"/>
	</jar>
  </target>

  <target name="dist" depends="jar">
  	<copy toDir="${dist.dir}" file="lib/restlet-2.0m3/org.restlet.jar"/>
  </target>

  <target name="clean">
	<delete dir="build"/>
  </target>

  <target name="dist-clean" depends="clean">
	<delete file="${jar.name}"/>
  	<delete dir="${dist.dir}/org.restlet.jar"/>
  </target>
</project>
